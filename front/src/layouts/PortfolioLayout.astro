---
import Layout from './Layout.astro'; // Ou remplace par un layout global
const { title } = Astro.props;
---

<Layout title={title}>
  <main class="prose mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6">{title}</h1>
    <article class="markdown-content">
      <slot />
    </article>
  </main>
</Layout>

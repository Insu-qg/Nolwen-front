---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css"; 
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>Site Vitrine</title>
    <!-- Favicon SVG -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- FullCalendar CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.9/main.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@6.1.9/main.min.css"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body class="light-theme font-sans min-h-screen">
    <Navbar />
    <main class="p-6 mx-auto shadow-lg">
      <slot />
    </main>
  </body>
</html>

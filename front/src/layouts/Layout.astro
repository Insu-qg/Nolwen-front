    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
  </head>
  <body class="flex flex-col min-h-screen bg-gray-50">
    <Navbar />
    <main class="flex-grow flex flex-col">
      <slot />

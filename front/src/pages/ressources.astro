---
import Layout from '../layouts/Layout.astro';
import './src/styles/global.css'

// Exemple fictif de data venant de Strapi
const ressources = [
  { id: 1, title: 'Formation React', type: 'Formation' },
  { id: 2, title: 'Conseils en branding', type: 'Conseil' },
];
---

<Layout>
  <h1 class="text-2xl font-semibold mb-4">Ressources</h1>
  <ul class="space-y-2">
    {ressources.map(r => (
      <li class="border p-4">
        <h2 class="font-bold">{r.title}</h2>
        <p class="text-sm text-gray-600">{r.type}</p>
      </li>
    ))}
  </ul>
</Layout>

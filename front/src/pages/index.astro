---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="max-w-6xl mx-auto px-4 py-24">
    <h1 class="text-5xl font-bold text-center mb-16 text-gray-800">
      Lorem Ipsum Dolor
    </h1>

    <!-- ------- Forme 1 ------- -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- ------- Bloc 1 ------- -->

        <div class="flex justify-center mb-6">
          <div class="flex gap-2">
            <div class="bg-gray-800 w-8 h-8 rounded shadow-sm"></div>
            <div class="bg-primary w-8 h-8 rounded shadow-sm"></div>
            <div class="bg-beige w-8 h-8 rounded shadow-sm"></div>
          </div>
        </div>
        <!-- Titre -->
        <h2 class="text-2xl font-semibold text-center mb-2">Sed Magna</h2>
        <div class="flex justify-center mb-4">

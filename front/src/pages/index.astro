        <div>
          <!-- Titre -->
          <h2 class="text-3xl font-semibold mb-2">Fringilla Ipsum</h2>
          <div class="mb-6">
            <div class="bg-beige h-1 w-32 rounded"></div>
          </div>
          <!-- Texte -->

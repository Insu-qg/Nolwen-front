---
import Layout from '../layouts/Layout.astro';
import "./src/styles/global.css";
---

<Layout>
  <h1 class="text-2xl font-semibold mb-4">Formulaire de contact</h1>
  <form class="space-y-4">
    <input type="text" placeholder="Nom" class="border p-2 w-full" />
    <input type="email" placeholder="Email" class="border p-2 w-full" />
    <textarea placeholder="Message" class="border p-2 w-full"></textarea>
    <button type="submit" class="bg-blue-600 text-white px-4 py-2">Envoyer</button>
  </form>
</Layout>
